<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <com.gmail.slashb410.picshelf.VerticalTextView
            android:background="@drawable/box_left_round_red"
            android:layout_width="30dp" android:layout_height="60dp"
            android:id="@+id/tv_label_edit"
            android:text="LABEL"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv_edit"
            app:layout_constraintRight_toLeftOf="@+id/iv_edit"/>
    <ImageView
            android:id="@+id/iv_edit" android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label_edit"
            app:layout_constraintLeft_toRightOf="@+id/tv_label_edit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <RadioGroup
            android:id="@+id/rg_label_color_edit"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_edit"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <RadioButton
                    android:checked="true"
                    android:id="@+id/rb_red_edit"
                    android:layout_margin="16dp"
                    android:layout_width="56dp" android:layout_height="56dp"
                    android:text="red"/>
            <RadioButton
                    android:id="@+id/rb_yellow_edit"
                    android:layout_margin="16dp"
                    android:layout_width="56dp" android:layout_height="56dp"
                    android:text="yellow"/>
            <RadioButton
                    android:id="@+id/rb_blue_edit"
                    android:layout_margin="16dp"
                    android:layout_width="56dp" android:layout_height="56dp"
                    android:text="blue"/>
            <RadioButton
                    android:id="@+id/rb_purple_edit"
                    android:layout_margin="16dp"
                    android:layout_width="56dp" android:layout_height="56dp"/>
    </RadioGroup>
    <EditText
            android:id="@+id/et_label_edit"
            android:layout_margin="16dp"
            android:layout_width="match_parent" android:layout_height="64dp"
    app:layout_constraintTop_toBottomOf="@+id/rg_label_color_edit"
    android:hint="INPUT PICTURE LABEL"
    />
</android.support.constraint.ConstraintLayout>