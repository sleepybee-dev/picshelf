<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:id="@+id/tv_message_one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
                android:id="@+id/btn_cancel_one_button"
                android:text="@string/cancel"
                android:background="@drawable/box_border_round_grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"/>
        <Button
                android:id="@+id/btn_confirm_one_button"
                android:text="@string/confirm"
                android:background="@drawable/box_border_round_accent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"/>
    </LinearLayout>
</LinearLayout>